<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well" style="display:flex;justify-content:end;">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products center-align">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Category Name</th>
          <th colspan="2">Product Count</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>

  </div>

</section>
